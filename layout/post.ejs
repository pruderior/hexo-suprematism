<div class="container">
    <!-- Article -->
    <article class="post">
        <header class="post-header">
            <h1 class="post-title"><%= page.title %></h1>
            <time class="post-date"><%- date(page.date, 'YYYY 年 MM 月 DD 日') %></time>
        </header>
        
        <div class="post-content">
            <%- page.content %>
        </div>

        <footer class="post-footer">
            <a href="<%- url_for('/') %>" class="back-link">← Back to home</a>
        </footer>
    </article>

    <!-- Footer -->
    <footer class="site-footer">
        <p><%= config.subtitle || config.title %></p>
        <p class="footer-links">
            <% if (theme.email) { %>
            <a href="mailto:<%= theme.email %>" title="Email">✉ Email</a>
            <span class="footer-divider">·</span>
            <% } %>
            <a href="<%- url_for('/atom.xml') %>" title="RSS Feed">⊕ RSS</a>
        </p>
        <p class="footer-meta">
            Theme <a href="https://github.com/pruderior/hexo-suprematism" target="_blank">Suprematist</a> · 
            Powered by <a href="https://hexo.io/" target="_blank">Hexo</a>
        </p>
        <p class="footer-meta">
            Inspired by <a href="https://www.goodreads.com/book/show/6177320-the-great-utopia" target="_blank">The Great Utopia</a>
        </p>
    </footer>
</div>
