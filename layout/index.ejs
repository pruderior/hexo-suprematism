<div class="container">
    <section class="stories">
        <% page.posts.each(function(post) { %>
        <a href="<%- url_for(post.path) %>" class="story-link">
            <article class="story">
                <h3 class="story-title"><%= post.title %></h3>
                <time class="story-date"><%- date(post.date, 'YYYY 年 MM 月 DD 日') %></time>
                <% if (post.excerpt) { %>
                <div class="story-excerpt">
                    <%- strip_html(post.excerpt).substring(0, 300) %>
                </div>
                <% } else if (post.content) { %>
                <div class="story-excerpt">
                    <%- strip_html(post.content).substring(0, 300) %>...
                </div>
                <% } %>
                <span class="read-more">READ MORE</span>
            </article>
        </a>
        <% }); %>
    </section>

    <!-- Pagination -->
    <% if (page.total > 1) { %>
    <nav class="pagination">
        <% if (page.prev) { %>
        <a href="<%- url_for(page.prev_link) %>" class="page-link">&lt;&lt; prev</a>
        <% } %>
        <% for (var i = 1; i <= page.total; i++) { %>
        <a href="<%- url_for(i === 1 ? '/' : '/page/' + i + '/') %>" class="page-link <%= page.current === i ? 'current' : '' %>"><%= i %></a>
        <% } %>
        <% if (page.next) { %>
        <a href="<%- url_for(page.next_link) %>" class="page-link">next &gt;&gt;</a>
        <% } %>
    </nav>
    <% } %>

    <!-- Footer -->
    <footer class="site-footer">
        <p><%= config.subtitle || config.title %></p>
        <p class="footer-links">
            <a href="mailto:nicolacola@outlook.com" title="Email">✉ Email</a>
            <span class="footer-divider">·</span>
            <a href="<%- url_for('/atom.xml') %>" title="RSS Feed">⊕ RSS</a>
        </p>
        <p class="footer-meta">
            Theme <a href="https://github.com/pruderior/hexo-suprematism" target="_blank">Suprematist</a> · 
            Powered by <a href="https://hexo.io/" target="_blank">Hexo</a>
        </p>
        <p class="footer-meta">
            Inspired by <a href="https://www.goodreads.com/book/show/6177320-the-great-utopia" target="_blank">The Great Utopia</a>
        </p>
    </footer>
</div>
